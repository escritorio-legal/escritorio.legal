// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String
  password    String
  phone       String?
  process     LawSuit[]
  UserLawFirm UserLawFirm[]
  UserProfile UserProfile[]
}

model LawFirm {
  id          Int           @id @default(autoincrement())
  name        String
  profiles    Profile[]
  UserLawFirm UserLawFirm[]
}

model UserLawFirm {
  role  String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  lawFirm    LawFirm  @relation(fields: [lawFirmId], references: [id])
  lawFirmId  Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, lawFirmId])
}

model UserProfile {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  profile    Profile  @relation(fields: [profileId], references: [id])
  profileId  Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, profileId])
}

model Profile {
  id          Int           @id @default(autoincrement())
  name        String
  lawFirm     LawFirm       @relation(fields: [lawFirmId], references: [id])
  lawFirmId   Int
  UserProfile UserProfile[]
}

model LawSuit {
  id        Int    @id @default(autoincrement())
  name      String
  status    String
  user      User   @relation(fields: [lawSuitId], references: [id])
  lawSuitId Int
}
