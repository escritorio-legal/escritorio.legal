// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  name        String
  password    String
  phone       String?
  lawSuit     LawSuit[]
  userLawFirm UserLawFirm[]
  userProfile UserProfile[]
}

model LawFirm {
  id          Int           @id @default(autoincrement())
  name        String
  profiles    Profile[]
  userLawFirm UserLawFirm[]
}

model UserLawFirm {
  role       String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  lawFirm    LawFirm  @relation(fields: [lawFirmId], references: [id])
  lawFirmId  Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, lawFirmId])
}

model UserProfile {
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  profile    Profile  @relation(fields: [profileId], references: [id])
  profileId  Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, profileId])
}

model Profile {
  id          Int           @id @default(autoincrement())
  name        String
  lawFirm     LawFirm       @relation(fields: [lawFirmId], references: [id])
  lawFirmId   Int
  userProfile UserProfile[]
  permission ProfilePermission[]
}

model LawSuit {
  id     Int    @id @default(autoincrement())
  name   String
  status String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Permission {
  id        Int    @id @default(autoincrement())
  namespace String
  profile ProfilePermission[]
}

model ProfilePermission {
  profileId    Int
  profile      Profile    @relation(fields: [profileId], references: [id])
  permissionId Int
  permission   Permission @relation(fields: [permissionId], references: [id])
  assignedAt   DateTime   @default(now())
  assignedBy   String
  
  @@id([profileId, permissionId])
}
